fruits = ["авокадо", "ананас", "инжир", "кокос", "маракуйя"] #1
professions = ["археолог", "бармен", "оториноларинголог", "строитель", "флорист"] #2
types_of_sports = ["киберспорт", "мотокросс", "скалолазание", "тхэквондо", "фехтование"] #3
animals = ["дракон", "коала", "муравьед", "осьминог", "шимпанзе"] #4
attempts = 15 #попытки
letters = [] #список из букв загаданного слова
vvod_letters = '' #буквы, которые уже были введены сохраняются здесь и удаляются из переменной "azbuka" 
azbuka = ["а", "б", "в", "г", "д", "е", "ё", "ж", "з", "и", "й", "к", "л", "м", "н", "о", "п", "р", "с", "т", "у", "ф", "х", "ц", "ч", "ш", "щ", "ъ", "ы", "ь", "э", "ю", "я"] #всевозможные буквы
print(" Приветствую! Это игра, основанная на проекте 'Поле чудес', или по-другому - 'Виселица'") #приветствие
print(" У Вас есть 4 категории: \n 1.фрукты \n 2.профессии \n 3.виды спорта \n 4.животные")
print(" В каждой категории находится по 5 слов разной длины.")
print(" На отгадывание любого слова будет даваться возможность 15 раз ошибиться и выбрать не ту букву, то есть 15 попыток")
print(" Также у Вас доступна функция: ввести слово полностью. Но будьте аккуратны, при введении полного слова неправильно - все попытки сгорают и игра заканчивается!")
category = input(" Введите номер выбранной Вами категории ") #1/2/3/4 категория
the_number_of_the_word = int(input(" Введите цифру от 1 до 5 для выбора слова из категории ")) #1/2/3/4/5 слово из категории
if "1" in category: #фрукты
    while attempts > 0: #пока не кончились попытки
        secret = fruits[the_number_of_the_word - 1] #загаданное слово 
        print(' Если хотите сразу ввести слово полностью, напишите: /полностью')
        attempt_1 = input(" Введите букву(буквы вводятся русские): ")
        attempt_1.lower() #сделать введенную букву маленькой(на случай, если та окажеся большой) - нижний регистр
        if '/полностью' in attempt_1: #если захотите ввести полное слово
            otvet = input(" Введите предполагаемое слово: ") 
            if otvet == secret: #если совпали(шок)
                print(' Поздравляю! Вы отгадали слово! \n количество попыток:', (15 - attempts)) #супер-пупер отгадали
                break
            else:
                print('Похоже ты не угадал слово...((') #всё таки не отгадали
                print('Но не расстраивайся! Попробуй снова!')
                break
        if len(attempt_1) > 1: #проверка на случай если игорк ввёл больше одной буквы
            print(" Ты ввел больше чем одну букву")
        elif attempt_1 in vvod_letters: #проверка на случай если такая буква уже была введена
            print(" Такая буква уже была введена")
        else:
            vvod_letters += attempt_1
        for i in secret: #перебирает каждую букву в загаданном слове
            if i in vvod_letters:  #проверяет была ли эта буква уже введена
                print('', i, end=' ')
            else: 
                print('', '*', end =' ') #заменяет звездочку на букву, если буква угадана
        attempts -= 1
        azbuka.remove(attempt_1.lower())
        print('\n Oсталось попыток:', attempts)
        print(" Оставшиеся буквы для введения:")
        print("", *azbuka)
    if attempts > 0:
        print(' Поздравляю! Ты угадал/a слово!!') #угадал
        print(' Количество попыток:', (15 - attempts)) #попытки за которые угадал
    else:
        print(' Похоже ты не угадал слово...((') #не угадал
        print(' Но не расстраивайся! Попробуй снова!')
elif "2" in category: #профессии
